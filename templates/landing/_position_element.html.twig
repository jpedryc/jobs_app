<div class="card border-0">

    <!-- Header -->
    <div class="card-header d-flex flex-row justify-content-between bg-dark text-white">

        <!-- Left header part -->
        <div class="p-2">
            <p class="font-weight-bolder text-secondary">{{ position.type }}</p>
            <h3>{{ position.title }}</h3>
            <a class="text-info my-auto" href="{{  position.companyUrl }}" title="{{ position.company }}" target="_blank">
                <svg class="text-info" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16"><path fill-rule="evenodd" fill="currentColor" d="M10.604 1h4.146a.25.25 0 01.25.25v4.146a.25.25 0 01-.427.177L13.03 4.03 9.28 7.78a.75.75 0 01-1.06-1.06l3.75-3.75-1.543-1.543A.25.25 0 0110.604 1zM3.75 2A1.75 1.75 0 002 3.75v8.5c0 .966.784 1.75 1.75 1.75h8.5A1.75 1.75 0 0014 12.25v-3.5a.75.75 0 00-1.5 0v3.5a.25.25 0 01-.25.25h-8.5a.25.25 0 01-.25-.25v-8.5a.25.25 0 01.25-.25h3.5a.75.75 0 000-1.5h-3.5z"></path></svg>
                {{ position.company }}
            </a>
        </div>

        <!-- Right header part -->
        <div class="p-2">
            <a href="{{ position.url }}" target="_blank" class="btn btn-outline-info text-white">To Job Offer</a>
        </div>

    </div>

    <!-- Body -->
    <div class="card-body">
        <p class="card-text">
            {{  position.description|raw }}
        </p>
    </div>

</div>